---
import { getImage } from 'astro:assets';
import heroImg from '../assets/halaman-depan.jpg';

const optimizedHeroImg = await getImage({src: heroImg, format: 'webp'});
---

<section id="beranda" class="hero d-flex align-items-center">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6">
				<div class="hero-content">
					<h1 class="display-4 fw-bolder mb-3 text-dark">Edukasi<br /><span class="text-success fw-bold">Remaja</span></h1>
					<p class="lead mb-4">Media edukatif yang mengajarkan remaja<br /><span class="">tentang pola hidup sehat dan kesejahteran diri.</span></p>
					<div>
						<a class="btn btn-success btn-lg me-3" href="#tentang"><i class="bi bi-arrow-right me-2"></i>Pelajari</a>
						<a class="btn btn-outline-secondary btn-lg" href="#tips"><i class="bi bi-lightbulb me-2"></i>Lihat Tips</a>
					</div>
				</div>
			</div>
			<div class="col-md-6 d-none d-md-block">
			</div>
		</div>
	</div>

	<style is:global>
		.hero {
            min-height: 100vh;
			background: url('/web_kesehatan/assets/halaman-depan.jpg');
			background-size: cover;
			background-position: center right;
			position: relative;
			display: flex;
			align-items: center;
			color: #0b0b0b;
			padding: 4rem 0;
		}
		.hero::before {
			content: "";
			position: absolute;
			inset: 0;
			background: linear-gradient(90deg, rgba(255,255,255,0.92) 0%, rgba(255,255,255,0.6) 60%, rgba(255,255,255,0) 100%);
			pointer-events: none;
		}

		.hero .container { position: relative; z-index: 2; }
		.hero h2 { font-size: clamp(1.8rem, 5vw, 3rem); }
		.hero .lead { color: #333; }
		.hero .btn { transition: all 0.3s ease; }
		.hero .btn:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); }

		.hero-content {
			animation: fadeInUp 1s ease-out;
		}

		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(30px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@media (max-width: 767.98px) {
			.hero { min-height: 100vh; padding: 3rem 0; }
			.hero::before { background: linear-gradient(180deg, rgba(255,255,255,0.94) 0%, rgba(255,255,255,0.7) 40%, rgba(255,255,255,0) 100%); }
		}
	</style>
		<img src={heroImg.src} alt="hero background" style="position:absolute; inset:0; width:100%; height:100%; object-fit:cover; object-position: center 65%; z-index:1;" />
</section>
